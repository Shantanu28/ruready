#==============================================================================
# RU2 application: web application resource locator configuration
#==============================================================================

# Project name
project.name=ru2

# Name of this resource locator
name=WebApp

#-------------------------------------------------------
# Logging
#-------------------------------------------------------
# Log4J configuration file
log4j.config_file_name=./log4j_WebApp.properties

#-------------------------------------------------------
# EIS layer & DAO
#-------------------------------------------------------

# Type of EIS layer
dao_factory=hibernate

# EIS layer configuration file
dao_factory.config_file_name=./hibernate_WebApp.cfg.xml

#%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
# Properties specific to the Hibernate EIS layer
#%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

# Type of configuration
dao_factory.hibernate.config=ANNOTATION
# Database table naming strategy
dao_factory.hibernate.naming_strategy=IMPROVED

#-------------------------------------------------------
# Data files
#-------------------------------------------------------
data.dir=./data/content

#-------------------------------------------------------
# JavaMail Session
#-------------------------------------------------------
javamail=jndi

#-------------------------------------------------------
# Encryption engine
#-------------------------------------------------------
encryptor=RSA

#-------------------------------------------------------
# Business logic configuration
#-------------------------------------------------------
# Time to expunge old items [min]. 
# Set to 7 days.
trash.expunge_time=10080
#trash.expunge_time=0

# Time interval between trash cleaning [min]. 
# Set to 7 days.
trash.cleaning_interval=10080
#trash.cleaning_interval=1
