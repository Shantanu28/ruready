<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
	<head>
		<script src="/ru2/include/ext/yui-utilities.js" type="text/javascript"></script>
		<script src="/ru2/include/ext/ext-yui-adapter.js" type="text/javascript"></script>
		<script src="/ru2/include/ext/ext-all-debug.js" type="text/javascript"></script>
		<script src="edit_grid2.js" type="text/javascript"></script>

		<link href="/ru2/include/ext/css/ext-all.css" media="screen" rel="Stylesheet"
			type="text/css" />

		<style type="text/css">
.hidden {
	display: none !important
}

.redcell {
	background-color: red !important;
}

.greenrow {
	background-color: green !important;
}

body {
	margin: 0px 0px 0px 15px;
}

#mygrid {
	border: 1px solid #99bbe8;
	overflow: hidden;
	height: 500px;
	width: 450px;
}

.grid div,body {
	font-family: Geneva, Arial, Helvetica, sans-serif;
	font-size: 16px;
}
</style>

	</head>

	<body>
		<center>
			<h1>
				Remote Grid Example
			</h1>
		</center>
		<form action="/ru2/open/ext/simpleDataGrid.do" method="post">
			<input type="hidden" name="updategrid" id="updategrid" />
			<table align="center">
				<tr>
					<td>
						<div id="mygrid" class="grid"></div>
					</td>
				</tr>
				<tr>
					<td align="left" colspan="2">
						<input type="submit" value="Save Changes" name="action_update" />
						&nbsp;&nbsp;
						<input type="submit" value="Reset" name="action_reset" />
					</td>
				</tr>
			</table>
		</form>

	</body>
</html>
