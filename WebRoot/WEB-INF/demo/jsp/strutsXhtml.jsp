<?xml version="1.0" encoding="UTF-8"?>
<%@ page language="java" pageEncoding="ISO-8859-1"%>

<%@ taglib uri="http://struts.apache.org/tags-bean" prefix="bean"%>
<%@ taglib uri="http://struts.apache.org/tags-html" prefix="html"%>
<%@ taglib uri="http://struts.apache.org/tags-logic" prefix="logic"%>
<%@ taglib uri="http://struts.apache.org/tags-tiles" prefix="tiles"%>

<%--============================ Useful definitions ==============================--%>

<%-- Declare that this JSP snippet/included JSP adheres to XHTML syntax. --%>
<html:xhtml />

<%--============================ JSP body begins here ============================--%>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html:html xhtml="true">
<head>
	<html:base />

	<title><bean:message key="user.strutsXhtml.title" /></title>

	<meta http-equiv="pragma" content="no-cache" />
	<meta http-equiv="cache-control" content="no-cache" />
	<meta http-equiv="expires" content="0" />
	<meta http-equiv="keywords" content="enter,your,keywords,here" />
	<meta http-equiv="description"
		content="A short description of this page." />
	<meta http-equiv="content-type" content="text/html; charset=ISO-8859-1" />

	<!--  Common style sheet -->
	<link rel="stylesheet" type="text/css"
		href="<html:rewrite module='' page='/css/ruready.css'/>" />

</head>

<body>
	<h1>
		<bean:message key="user.strutsXhtml.header" />
	</h1>
	<p>
		<bean:message key="user.strutsXhtml.header.text" />
	</p>

	<h2>
		<bean:message key="user.strutsXhtml.section1" />
	</h2>
	<ul>
		<li>
			<bean:message key="user.strutsXhtml.section1.text1" />
		</li>
	</ul>
	
	<br />
</body>
</html:html>
