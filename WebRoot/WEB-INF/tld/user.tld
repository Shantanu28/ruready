<taglib xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
	version="2.1">

	<description>User tag library</description>
	<display-name>custom</display-name>
	<tlib-version>1.0</tlib-version>
	<jsp-version>2.1</jsp-version>
	<short-name>user-related tags</short-name>
	<uri>http://ruready.net/user</uri>

	<!-- ======================== Print user perspective buttons == -->

	<tag-file>
		<name>perspectives</name>
		<path>/WEB-INF/tags/user/perspectives.tag</path>
	</tag-file>

</taglib>
