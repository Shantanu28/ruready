<tiles-definitions>
	<!--
		==========================================
		Base layout of all Content component pages
		==========================================
	-->
	<!-- Trivial layout for AJAX-to-JSP-to-element population -->
	<definition name=".trivialDef"
		path="/WEB-INF/common/tiles/trivialTemplate.jsp">
		<put name="content" value="/WEB-INF/common/tiles/empty.jsp" />
	</definition>

	<!-- Base layout of all pages -->
	<!--
		Note 1: the "title" and "header" fields are keys used by <bean:message>, not literal strings.
	-->
	<definition name=".baseDef"
		path="/WEB-INF/common/tiles/template.jsp">
		<put name="title" value="A key into Application.resources" />
		<put name="header" value="app.header" />
		<put name="logoClass" value="logo_ruready" />
		<put name="toolbar" value="/WEB-INF/common/tiles/toolbar.jsp" />
		<put name="content" value="/WEB-INF/common/tiles/content.jsp" />
		<put name="links" value="/WEB-INF/common/tiles/links.jsp" />
		<put name="footer" value="/WEB-INF/common/tiles/footer.jsp" />
	</definition>

	<!-- Base layout of all content component pages -->
	<definition name=".contentBaseDef" extends=".baseDef">
		<put name="title" value="content.title" />
		<put name="header" value="content.header" />
		<put name="logoClass" value="logo_content" />
		<put name="head" value="/WEB-INF/content/tiles/head.jsp" />
		<put name="toolbar" value="/WEB-INF/content/tiles/toolbar.jsp" />
	</definition>

	<!--
		==========================================
		Catalog Module
		==========================================
	-->

	<!-- CMS home page -->
	<!-- 
		<definition name=".contentHome" extends=".contentBaseDef">
		<put name="title" 		value="content.title" />
		<put name="content"  	value="/WEB-INF/content/jsp/home.jsp" />
		</definition>
	-->

	<!--
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		Explorer view
		(a tree panel + AJAX-populated content area)
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	-->

	<!-- Generic Item view page. -->
	<definition name=".viewFull" extends=".contentBaseDef">
		<put name="title" value="content.viewFull.title" />
		<put name="head"
			value="/WEB-INF/content/jsp/viewItemFull.head.jsp" />
		<put name="navbar" value="/WEB-INF/content/jsp/itemTree.jsp" />
		<put name="content" value="/WEB-INF/common/tiles/contentDiv.jsp" />
	</definition>

	<!-- Item content division, populates by AJAX -->
	<definition name=".viewContent" extends=".trivialDef">
		<put name="content" value="/WEB-INF/content/jsp/viewContent.jsp" />
	</definition>

	<!--
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		Edit view
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	-->

	<!-- Generic full edit page for item and its children -->
	<definition name=".editItemFull" extends=".contentBaseDef">
		<put name="title" value="content.editItemFull.title" />
		<put name="content"
			value="/WEB-INF/content/jsp/editItemFull.jsp" />
		<put name="head"
			value="/WEB-INF/content/jsp/editItemFull.head.jsp" />
	</definition>

	<!--
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		Item transfer pages
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	-->
	<!-- Item transfer view/edit page -->
	<definition name=".transferItem" extends=".contentBaseDef">
		<put name="title" value="content.transferItem.title" />
		<put name="content"
			value="/WEB-INF/content/jsp/transferItem.jsp" />
	</definition>

	<!--
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		Item search pages
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	-->
	<!-- Item simple search page -->
	<definition name=".searchItem" extends=".contentBaseDef">
		<put name="title" value="content.searchItem.title" />
		<put name="content" value="/WEB-INF/content/jsp/searchItem.jsp" />
	</definition>

	<!-- 
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		View item revision history
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	-->
	<definition name=".viewRevisions" extends=".contentBaseDef">
		<put name="title" value="content.viewRevisions.title" />
		<put name="content"
			value="/WEB-INF/content/jsp/viewRevisions.jsp" />
	</definition>


	<!-- 
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		Question specific screen. Popup. @todo genericize this.
		%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	-->

	<definition name=".subInterest" extends=".contentBaseDef">
		<put name="title" value="question.viewInterest.title" />
		<put name="header" value="question.viewInterest.title" />
		<put name="content"
			value="/WEB-INF/content/question/jsp/ADMIN/subInterest.jsp" />
		<put name="footer"
			value="/WEB-INF/common/tiles/closeWindowFooter.jsp" />
	</definition>

	<!-- Generic question search page -->
	<definition name=".searchQuestion" extends=".contentBaseDef">
		<put name="title" value="question.searchQuestion.title" />
		<put name="head"
			value="/WEB-INF/content/question/jsp/ADMIN/searchQuestion.head.jsp" />
		<put name="content"
			value="/WEB-INF/content/question/jsp/ADMIN/searchQuestion.jsp" />
	</definition>

	<!-- Question preview page: open-ended format -->
	<definition name=".displayOpenEnded" extends=".contentBaseDef">
		<put name="title" value="question.displayOpenEnded.title" />
		<put name="header" value="question.displayOpenEnded.title" />
		<put name="content"
			value="/WEB-INF/content/question/jsp/ADMIN/displayOpenEnded.jsp" />
		<put name="footer"
			value="/WEB-INF/common/tiles/closeWindowFooter.jsp" />
	</definition>

	<!-- Question preview page: multiple-choice format -->
	<definition name=".displayMultipleChoice"
		extends=".contentBaseDef">
		<put name="title" value="question.displayMultipleChoice.title" />
		<put name="header" value="question.displayMultipleChoice.title" />
		<put name="content"
			value="/WEB-INF/content/question/jsp/ADMIN/displayMultipleChoice.jsp" />
		<put name="footer"
			value="/WEB-INF/common/tiles/closeWindowFooter.jsp" />
	</definition>

	<!--
		==========================================
		Error pages
		==========================================
	-->

	<!-- Record not found -->
	<definition name=".error" extends=".contentBaseDef">
		<put name="title" value="content.error.title" />
		<put name="content"
			value="/WEB-INF/content/error/jsp/error.jsp" />
	</definition>

</tiles-definitions>
