<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">
    
    <!-- Requires input: requestParameters.schoolId -->    
    <start-actions>
		<set attribute="flowKeyPrefix" value="'user.adminSchools.deleteStudent'" scope="flow"/>
	</start-actions>
	
	<start-state idref="initialize" />

	<action-state id="initialize">
		<action bean="studentSchoolMembership" method="setSchool"/>
		<transition on="success" to="setUser"/>
		<transition on="error" to="error"/>
	</action-state>
	
	<action-state id="setUser">
		<action bean="studentSchoolMembership" method="setUser"/>
		<transition on="success" to="confirmForm"/>
		<transition on="error" to="error"/>
	</action-state>
	
	<view-state id="confirmForm" view=".adminSchools.students.delete.confirmForm">
		<render-actions>
			<action bean="studentSchoolMembership" method="setupForm" />
		</render-actions>
		<transition on="yes" to="delete"/>
		<transition on="no" to="cancel"/>
	</view-state>
	
	<action-state id="delete">
		<action bean="studentSchoolMembership" method="delete"/>
		<transition on="success" to="finished"/>
		<transition on="error" to="error"/>
	</action-state>
	
	<end-state id="finished"/>
	<end-state id="cancel">
		<entry-actions>
			<action bean="studentSchoolMembership" method="doCancel"/>
		</entry-actions>
	</end-state>
	<end-state id="error">
		<entry-actions>
			<action bean="studentSchoolMembership" method="exposeErrors"/>
		</entry-actions>
	</end-state>
</flow>