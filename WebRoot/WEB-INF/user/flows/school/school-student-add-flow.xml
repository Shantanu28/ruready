<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">
                          
	<start-actions>
		<set attribute="flowKeyPrefix" value="'user.studentSchoolMemberships.add'" scope="flow"/>
		<action bean="studentSchoolMembership" method="setUserToSelf"/>
	</start-actions>
	
	<start-state idref="entryForm" />

	<view-state id="entryForm" view=".studentAddSchool.entryForm">
		<render-actions>
			<action bean="studentSchoolMembership" method="setupForm"/>
			<action bean="studentSchoolMembership" method="performSearch"/>
		</render-actions>
		<transition on="submit" to="entryForm">
			<action bean="studentSchoolMembership" method="bindAndValidate"/>
			<action bean="studentSchoolMembership" method="setFirstPage"/>
		</transition>
		
		<transition on="firstPage" to="entryForm">
			<action bean="studentSchoolMembership" method="setFirstPage"/>
		</transition>
		<transition on="prevPage" to="entryForm">
			<action bean="studentSchoolMembership" method="setPreviousPage"/>
		</transition>
		<transition on="nextPage" to="entryForm">
			<action bean="studentSchoolMembership" method="setNextPage"/>
		</transition>
		<transition on="lastPage" to="entryForm">
			<action bean="studentSchoolMembership" method="setLastPage"/>
		</transition>
		
		<transition on="add" to="add">
			<action bean="studentSchoolMembership" method="setSchool"/>
		</transition>
		
		<transition on="cancel" to="cancel"/>
		<transition on="schoolRequest" to="schoolRequestFlow"/>
	</view-state>
	
	<action-state id="add">
		<action bean="studentSchoolMembership" method="add"/>
		<transition on="success" to="finished"/>
		<transition on="error" to="entryForm"/>
	</action-state>
	
	<subflow-state id="schoolRequestFlow" flow="school-feedback-flow">
		<attribute-mapper>
			<input-mapper>
				<mapping source="requestScope.user" target="user"/>
			</input-mapper>
		</attribute-mapper>
		<transition on="finished" to="finished"/>
		<transition on="cancel" to="entryForm"/>
	</subflow-state>
	
	<end-state id="finished" view="externalRedirect:/user/open/STUDENT/schools/view.do"/>
	<end-state id="cancel" view="externalRedirect:/user/open/STUDENT/schools/view.do">
		<entry-actions>
			<action bean="studentSchoolMembership" method="doCancel"/>
		</entry-actions>
	</end-state>
</flow>