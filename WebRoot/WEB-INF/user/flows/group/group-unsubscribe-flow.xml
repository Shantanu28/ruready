<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">
    
   <!-- Requires input: requestParameters.groupId -->
    
    <start-actions>
		<set attribute="flowKeyPrefix" value="'user.groupMemberships.unsubscribe'" scope="flow"/>
		<action bean="groupSubscription" method="initializeSelfManagement"/>
	</start-actions>
	
	<start-state idref="initialize" />

	<action-state id="initialize">
		<action bean="groupSubscription" method="lookupGroupById"/>
		<transition on="success" to="confirmForm"/>
		<transition on="error" to="error"/>
	</action-state>
	
	<view-state id="confirmForm" view=".groupUnsubscribe.confirmForm">
		<render-actions>
			<action bean="groupSubscription" method="setupForm" />
		</render-actions>
		<transition on="yes" to="unsubscribe"/>
		<transition on="no" to="cancel"/>
	</view-state>
	
	<action-state id="unsubscribe">
		<action bean="groupSubscription" method="unsubscribe"/>
		<transition on="success" to="finished"/>
		<transition on="error" to="error"/>
	</action-state>
	
	<end-state id="finished" view="externalRedirect:/user/open/STUDENT/groups/view.do"/>
	<end-state id="cancel" view="externalRedirect:/user/open/STUDENT/groups/view.do">
		<entry-actions>
			<action bean="groupSubscription" method="doCancel"/>
		</entry-actions>
	</end-state>
	<end-state id="error" view="externalRedirect:/user/open/STUDENT/groups/view.do">
		<entry-actions>
			<action bean="groupSubscription" method="exposeErrors"/>
		</entry-actions>
	</end-state>
</flow>